
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using Final_Plataformas_De_Desarrollo.Models;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] Panel Admin</title>
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/css/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/css/modalEmergente.css" />

    <!-- IconMonster-->
    <link rel="stylesheet" href="~/css/iconmonstr-iconic-font.css">
    <link rel="stylesheet" href="~/css/iconmonstr-iconic-font.min.css">
</head>

<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">

    <div class="wrapper">
        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            @*<img class="animation__wobble" asp-area="" asp-controller="Admin" asp-action="Index" alt="AdminLTELogo" height="60" width="60">*@
            <img src="~/images/logo.png" class="animation__wobble" style="width:60px" alt="Cargando..." />
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" asp-controller="Admin" asp-action="Index" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary ">
            <!-- Brand Logo -->
            <div class="d-flex justify-content-center mt-5" style="vertical-align:middle;">
                <img src="~/images/logo.png"  style="width:100px" />
            </div>
            

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel  pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/images/login.png" width="160" height="160" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        Usuario: @(JsonConvert.DeserializeObject<Account>(HttpContextAccessor.HttpContext.Session.GetString("SignIn")).name)
                    </div>
                </div>

                <!-- SidebarSearch Form -->
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                    with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a asp-controller="Admin" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa fa-home"></i>
                                <p>INICIO</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Producto" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-boxes-stacked"></i>
                                <p>Productos</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Categoria" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>Categorias</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Usuario" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-users"></i>
                                <p>Usuarios</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Carro" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-cart-arrow-down"></i>
                                <p>Carros</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Compra" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-cart-shopping"></i>
                                <p>
                                    Compras
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="CerrarSesion" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>
                                    Cerrar Session
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>


        @*<div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>*@


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">

                        <!-- /.col
                    <div class="col-sm-6">
                      <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Index</li>
                      </ol>
                    </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Section -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-xl-10 col-sm-10 col-md-8">
                            <!-- Main content -->
                            @RenderBody()


                            @if (TempData["Mensaje"] != null)
                            {

                                @* MODAL *@

                                <div id="myModalEmergente" class="modal-Emergente pt-5 " style="display:block;">
                                    <div class="modal-content-Emergente mt-5 text-center">
                                        <span class="closeEmergente"></span>
                                        @if (TempData["TituloMensaje"] != null)
                                        {
                                            <div class="modal-header-Emergente">

                                                <h2 class="text-white">@TempData["TituloMensaje"]</h2>

                                            </div>
                                        }
                                        <div class="modal-body-Emergente">
                                            <p class="text-dark">@TempData["Mensaje"]</p>

                                        </div>
                                    </div>
                                </div>

                                @* FINAL MODAL *@
                            }

                            <!-- /.content -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div><!--/. container-fluid -->
            </section>
            <!-- /. Section -->

        </div>
    </div>

        <script src="~/js/jquery/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="~/js/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- overlayScrollbars -->
        <script src="~/js/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
        <!-- AdminLTE App -->
        <script src="~/js/adminlte.min.js"></script>


        <!-- AdminLTE for demo purposes -->
        <script src="~/js/demo.js"></script>
        <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
        <script src="~/js/dashboard2.js"></script>

        <script src="https://kit.fontawesome.com/2e9c83e3ea.js" crossorigin="anonymous"></script>
        @RenderSection("Scripts", required: false)

        <script src="~/js/jquery-3.5.1.js"></script>
        <script src="~/js/jquery.dataTables.min.js"></script>
        <script src="~/js/modalEmergente.js" asp-append-version="true"></script>

        <script>
            $(document).ready(function () {
                $('#tablajson').DataTable();
            });

        </script>


</body>

</html>
