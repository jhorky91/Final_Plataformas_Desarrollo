@model Final_Plataformas_De_Desarrollo.Models.Categoria

@{
    Layout = "~/Views/Shared/_LayoutA.cshtml";
    ViewData["Title"] = "Editar Categoria";
}

<div class="row justify-content-center">
    <div class="col-md-12">

        <h3>Editar Categoria</h3>
        <hr style="border-color:gray;" />

        <form asp-action="Edit" style="width:50%">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idCategoria" />
            <div class="form-group row">
                <label class="control-label col-md-6">Nombre</label>
                <input asp-for="nombre" class="form-control col-md-6" autofocus/>
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-6">Fecha de Creacion</label>
                <input asp-for="fechaCreacion" class="form-control col-md-6" />
                <span asp-validation-for="fechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </form>

        <hr style="border-color:gray;" />
        <div>
            <a role="button" class="btn btn-danger" asp-action="Index">Volver a la lista</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
