@model IEnumerable<Final_Plataformas_De_Desarrollo.Models.Usuario>

@{
    Layout = "~/Views/Shared/_LayoutA.cshtml";
    ViewData["Title"] = "Index";
}

<h1>Usuarios</h1>

<a class="btn btn-success"  asp-action="Create">Nuevo Usuario</a>

<div class="card-body">
    <div class="table-responsive">
        <div style="overflow-x:auto;">
            <table class="table table-xl-responsive-borderless" id="tablajson" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            DNI
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Apellido
                        </th>
                        <th>
                            Admin
                        </th>
                        <th>
                            Empresa
                        </th>
                        <th>
                            Intentos
                        </th>
                        <th>
                            Bloqueado
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.dni)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.apellido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.esAdmin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.esEmpresa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.intentos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bloqueado)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.idUsuario"><i class="fas fa-edit text-success"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.idUsuario"><i class="fas fa-eye text-success"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.idUsuario"><i class="fas fa-trash-alt text-success"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>