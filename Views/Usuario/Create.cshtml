@model Final_Plataformas_De_Desarrollo.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutA.cshtml";
    ViewData["Title"] = "Crear Usuario";
}
<div class="row">
    <div class="col-md-12">

        <h3>Crear Usuario</h3>
        <hr style="border-color:gray;" />

        <form asp-action="Create" style="width:50%">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label class="control-label col-md-6">DNI</label>
                <input asp-for="dni" class="form-control col-md-6" autofocus />
                <span asp-validation-for="dni" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-6">Nombre</label>
                <input asp-for="nombre" class="form-control col-md-6" autofocus />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-6">Apellido</label>
                <input asp-for="apellido" class="form-control col-md-6" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-6">Email</label>
                <input asp-for="mail" class="form-control col-md-6" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-6">Contraseña</label>
                <input asp-for="password" class="form-control col-md-6" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-6">CUIT-CUIL</label>
                <input asp-for="cuit_cuil" class="form-control col-md-6" />
                <span asp-validation-for="cuit_cuil" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-6">Es Admin</label>
                <div class="col-md-6 d-flex justify-content-center  custom-switch custom-switch-off-danger custom-switch-on-success" style="transform:scale(1.5)">
                    <input type="checkbox" class="custom-control-input " id="customSwitch1" asp-for="esAdmin">
                    <label class="custom-control-label " for="customSwitch1"></label>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-6">Es Empresa</label>
                <div class="col-md-6 d-flex justify-content-center  custom-switch custom-switch-off-danger custom-switch-on-success" style="transform:scale(1.5)">
                    <input type="checkbox" class="custom-control-input " id="customSwitch2" asp-for="esEmpresa">
                    <label class="custom-control-label " for="customSwitch2"></label>
                </div>
            </div>
                <div class="form-group row">
                    <input asp-for="intentos" class="form-control col-md-6" value="0" hidden />
                </div>
                <div class="form-group row">
                    <input role="checkbox" class="align-self-center col-md-6" asp-for="bloqueado" value="false" hidden />
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-warning" />
                </div>
</form>

        <hr style="border-color:gray;" />
        <div>
            <a role="button" class="btn btn-danger" asp-action="Index">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
