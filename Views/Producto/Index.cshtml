@model IEnumerable<Final_Plataformas_De_Desarrollo.Models.Producto>

@{
    Layout = "~/Views/Shared/_LayoutA.cshtml";
    ViewData["Title"] = "Index";
}

<h1>Productos</h1>

<a class="btn btn-success" asp-action="Create">Nuevo Producto</a>


<div class="card-body">
    <div class="table-responsive">
        <div style="overflow-x:auto;">
            <table class="table table-xl-responsive-borderless" id="tablajson" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Precio
                        </th>
                        <th>
                            Cantidad
                        </th>
                        <th>
                            Categoria
                        </th>
                        <th>
                            Fecha Creacion
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.nombre
                            </td>
                            <td>
                                $@item.precio
                            </td>
                            <td>
                                @item.cantidad
                            </td>
                            <td>
                                @item.cat.nombre
                            </td>
                            <td>
                                @item.fechaCreacion.ToString("yyyy-MM-dd")
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.idProducto"><i class="fas fa-edit text-success"></i></a> |

                                @* DETALLES PRODUCTO *@
                                <a role="button" data-toggle="modal" data-target="@("#modalDetalle" + item.idProducto.ToString())"> <i class="fas fa-eye text-success"></i> </a>|
                                @* ELIMINAR PRODUCTO *@
                                <a role="button" data-toggle="modal" data-target="@("#modalDel" + item.idProducto.ToString())"> <i class="fas fa-trash-alt text-success"></i> </a>


                                @* MODAL DETALLES PRODUCTO *@

                                <div class="modal" id="@("modalDetalle" + item.idProducto.ToString())" tabindex="-1" role="dialog" aria-labelledby="modalDelCenteredLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title text-center" id="modalDelCenteredLabel">Detalle del Producto</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body align-content-center">
                                                <div>
                                                    <hr style="border-color:gray;" />
                                                    <dl class="row ">
                                                        <dt class="col-sm-6">
                                                            Nombre
                                                        </dt>
                                                        <dd class="col-sm-6">
                                                            @item.nombre
                                                        </dd>
                                                        <dt class="col-sm-6">
                                                            Precio
                                                        </dt>
                                                        <dd class="col-sm-6">
                                                            $@item.precio
                                                        </dd>
                                                        <dt class="col-sm-6">
                                                            Cantidad
                                                        </dt>
                                                        <dd class="col-sm-6">
                                                            @item.cantidad
                                                        </dd>
                                                        <dt class="col-sm-6">
                                                            Categoria
                                                        </dt>
                                                        <dd class="col-sm-6">
                                                            @item.cat.nombre
                                                        </dd>
                                                        <dt class="col-sm-6">
                                                            Fecha de Creacion
                                                        </dt>
                                                        <dd class="col-sm-6">
                                                            @item.fechaCreacion.ToString("yyyy-MM-dd")
                                                        </dd>
                                                    </dl>
                                                    <hr style="border-color:gray;" />
                                                </div>
                                                <div>

                                                    <a role="button" class="btn btn-success text-dark" asp-action="Edit" asp-route-id="@item.idProducto"><label class="text-bold">Editar</label></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                                @* FIN DEL MODAL DETALLES PRODUCTO *@

                                @* MODAL ELIMINAR PRODUCTO *@

                                <div class="modal" id="@("modalDel" + item.idProducto.ToString())" tabindex="-1" role="dialog" aria-labelledby="modalDelCenteredLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="modalDelCenteredLabel">¿Estas seguro que deseas eliminar la categoria @item.nombre ?</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <span>
                                                    Si le das confirmar, la categoria se eliminará .
                                                </span>
                                            </div>
                                            <div class="modal-footer">
                                                <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@item.idProducto">Confirmar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @* FIN DEL MODAL ELIMINAR PRODUCTO *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
