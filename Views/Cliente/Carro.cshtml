@{
    ViewData["Title"] = "Mi Carro";
}
@model IEnumerable<Final_Plataformas_De_Desarrollo.Models.CarroProducto> ;

<div class="container">

    @if (Model.Count() > 0)
    {
        
        @foreach (CarroProducto carprod in Model)
        {
            <div class="row">
                <div class="col-md-10">
                    <h5>@carprod.producto.nombre</h5>
                    <p>Precio: $@carprod.producto.precio </p>
                    <p>Cantidad: @carprod.cantidad</p>
                </div>

                <div class="col-md-2">

                    @* MODIFICAR PRODUCTO *@
                    @*<a asp-controller="Cliente" asp-action="ModificarCarro" asp-route-id="@item.idProducto"><i class="fas fa-edit text-success"></i></a> |*@
                    @* ELIMINAR PRODUCTO *@
                    <a asp-controller="Cliente" asp-action="ModificarCarro" asp-route-id="@carprod.idProducto,0"><i class="fas fa-trash-alt text-success"></i></a>
                </div>

            </div>
            <hr />
        }
    }
    else
    {
        <div class="row">
            <h5>Carro vacio</h5>
        </div>
        <hr />
    }



</div>