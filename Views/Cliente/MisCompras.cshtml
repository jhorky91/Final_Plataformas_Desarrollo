@{
    ViewData["Title"] = "Mis Compras";

}
@model List<Final_Plataformas_De_Desarrollo.Models.Compra>;

<div class="row bg-info py-5">
    <div class="col-lg-12 text-center">
        <div>
            <h2>Mis Compras</h2>
        </div>
    </div>
</div>

@if (Model.Count() >= 1)
{
    <div class="row">
        <div class="col-md-12 mb-5 d-flex justify-content-center">
            @* Tabla Carro *@
            <table class="table table-xl-responsive-borderless w-75" cellspacing="0">
                <thead class="thead-dark">
                    <tr align="center">
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                @foreach (Compra com in Model)
                {

                    <tbody>
                        <tr align="center">
                            <td>
                                <h5>@com.fechaCreacion.ToString("yyyy-MM-dd")</h5>
                            </td>
                            <td>
                                <h5>@com.total</h5>
                            </td>
                            <td>
                                @* MODIFICAR PRODUCTO *@
                                <button type="button" class="btn btn-success " data-toggle="modal" data-target="@("#modalDetalle" + com.idCompra.ToString())"> <i class="fas fa-edit text-white"></i> </button>

                                @* MODAL MODIFICAR PRODUCTO DEL CARRO *@

                                <div class="modal" id="@("modalDetalle"+com.idCompra.ToString())" tabindex="-1" role="dialog" aria-labelledby="modalDelCenteredLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="modalDelCenteredLabel">@com.fechaCreacion.ToString("yyyy-MM-dd")</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <table>
                                                    <thead>
                                                        <tr>
                                                            <th>Producto</th>
                                                            <th>Precio</th>
                                                            <th>Cantidad</th>
                                                            <th>Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (CompraProducto cp in com.compraProducto)
                                                        {
                                                            <tr>
                                                                <td>@cp.producto.nombre</td>
                                                                <td>@cp.producto.precio</td>
                                                                <td>@cp.cantidad</td>
                                                                <td>@(cp.producto.precio * cp.cantidad)</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                @* FIN DEL MODAL MODIFICAR PRODUCTO DEL CARRO *@

                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>

}
else
{
    <div class="row justify-content-center my-5">
        <h5>No se encontraron compras registradas</h5>
    </div>
    <hr />
}

