@model IEnumerable<Final_Plataformas_De_Desarrollo.Models.Compra>

@{
    Layout = "~/Views/Shared/_LayoutA.cshtml";
    ViewData["Title"] = "Index";
}

<h1>Compras</h1>

<div class="card-body">
    <div class="table-responsive">
        <div style="overflow-x:auto;">
            <table class="table table-xl-responsive-borderless" id="tablajson" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Usuario
                        </th>
                        <th>
                            Total
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.usuario.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.total)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.idCompra"><i class="fas fa-edit text-success"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.idCompra"><i class="fas fa-eye text-success"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.idCompra"><i class="fas fa-trash-alt text-success"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>